<odoo>
  <data>
    <record model="ir.ui.view" id="employee_inherit_form">
      <field name="name">view.producxt.inherit.kanban</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">



       <!-- <xpath expr="//page[@name='variants']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath> -->
        <xpath expr="//page[@name='variants']" position="replace"/>

         
         
       </field>
    </record>

    <record model="ir.ui.view" id="view_employee_inherit_form">
      <field name="name">view.producxt.inherit.kanban</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
  

         <xpath expr="//field[@name='detailed_type']" position="replace"/>

         <xpath expr="//field[@name='taxes_id']" position="replace"/>
         


       <xpath expr="//field[@name='invoice_policy']" position="before">
                <field name="type_id" string="Medicine Type"/>
         </xpath>
        <xpath expr="//field[@name='type_id']" position="after">
                <field name="com_id" string="Medicine Company"/>
         </xpath>
         <xpath expr="//field[@name='type_id']" position="after">
                <field name="cat_id" string="Medicine Catagory"/>
         </xpath>
         <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath>
         <!-- <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath> -->
          <xpath expr="//page[@name='sales']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath>
        <xpath expr="//page[@name='invoicing']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath>

       <xpath expr="//page[@name='purchase']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath>
    <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
         </xpath>
        
         
       </field>
    </record>
  </data>
</odoo>

